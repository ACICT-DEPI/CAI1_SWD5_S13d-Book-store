@model BKStore_MVC.ViewModels.RegistersRoles

@{
    ViewData["Title"] = "AddAdmin";
}

<div class="container mt-5">
    <div class="card shadow-lg p-5">
        <h2 class="text-center mb-4">Add Admin</h2>
        <form asp-action="SaveAdmin">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control password-field" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control password-field" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Show Password Checkbox -->
            <div class="form-check mb-4">
                <input type="checkbox" class="form-check-input" id="showPasswordCheckbox" onclick="togglePasswordVisibility()">
                <label class="form-check-label" for="showPasswordCheckbox">Show Password</label>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg custom-btn">Create Admin</button>
            </div>

            <div class="d-grid gap-2">
                <a href="~/" class="btn btn-outline-light btn-lg custom-back-btn">Back to Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // JavaScript to toggle password visibility
        function togglePasswordVisibility() {
            var passwordFields = document.querySelectorAll('.password-field');
            passwordFields.forEach(function (field) {
                if (field.type === 'password') {
                    field.type = 'text';
                } else {
                    field.type = 'password';
                }
            });
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Custom Styles for Buttons and Form -->
<style>
    .custom-btn {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 50px;
        padding: 10px 20px;
        font-size: 18px;
        transition: all 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #0056b3;
            box-shadow: 0px 8px 15px rgba(0, 123, 255, 0.3);
            transform: translateY(-3px);
        }

    .custom-back-btn {
        background-color: #343a40;
        color: white;
        border-radius: 50px;
        padding: 10px 20px;
        font-size: 18px;
        transition: all 0.3s ease;
        border: 2px solid #ffffff;
    }

        .custom-back-btn:hover {
            background-color: #495057;
            color: #ffffff;
            border-color: #ffffff;
            box-shadow: 0px 8px 15px rgba(255, 255, 255, 0.3);
            transform: translateY(-3px);
        }

    .card {
        background-color: #f8f9fa;
        border-radius: 15px;
        padding: 2rem;

    }
</style>
