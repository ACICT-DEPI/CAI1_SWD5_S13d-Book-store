@model BKStore_MVC.ViewModel.BookCategVM

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h3>Categories</h3>
            <ul class="list-group">
                @if (Model.categories != null)
                {
                    @foreach (var category in Model.categories)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="/Category/Details/@category.CategoryID" class="text-decoration-none">@category.Name</a>
                            <span class="badge badge-primary badge-pill">@category.Book?.Count</span>
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item">No categories available</li>
                }
            </ul>
        </div>
        <div class="col-md-9">
            <div class="row mb-4">
                <div class="col-md-12">
                    <form asp-action="SearchByName" method="get" class="form-inline">
                        <input type="text" name="name" value="@Model?.SearchName" class="form-control w-75" placeholder="Search for products" />
                        <button type="submit" class="btn btn-primary ml-2">Search</button>
                    </form>
                </div>
            </div>
            <h3>Books</h3>
            <div class="row">
                @if (Model.books != null && Model.books.Any())
                {
                    @foreach (var book in Model.books)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <a href="@Url.Action("Details", "Book", new { Bookid = book.BookID })">
                                    <img src="~/assets/img/@book.ImagePath " class="card-img-top" alt="@book.Title">
                                    <div class="card-body">
                                        <h5 class="card-title">@book.Title</h5>
                                        <p class="card-text">Author: @book.AuthorName</p>
                                        <p class="card-text">Price: <strong>@book.Price</strong></p>
                                        @*                                 @if (book.Discount > 0)
                                {
                                <span class="badge badge-danger">-@book.Discount%</span>
                                }
                                *@
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No books available</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item a {
        color: #000;
    }

        .list-group-item a:hover {
            color: #007bff;
            text-decoration: underline;
        }

    .badge-pill {
        background-color: #007bff;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .badge-danger {
        background-color: #dc3545;
    }
</style>

