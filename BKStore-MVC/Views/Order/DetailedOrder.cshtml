@model BKStore_MVC.ViewModel.OrderDetailVM
@{
    ViewData["Title"] = "Order Details";
}
<div class="container">
    <h2>Order Details</h2>
    <div class="row">
        <div class="col-md-6">
            <p><strong>Name:</strong> @Model.CustomerName</p>
            <p><strong>Address:</strong> @Model.CustomerAddress</p>
            <p><strong>Governorate:</strong> @Model.Governorate</p>
        </div>
        <div class="col-md-6">
            <h4>Order Summary</h4>
            <ul class="list-group">
                @foreach (var item in Model.bookCartItems){

                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@item.Title (@item.Quantity)</span>
                    <span>@(item.Price * item.Quantity) EGP</span>
                </li>
                }
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Subtotal</span>
                    <span>@(Model.TotalPrice -50) EGP</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Shipping (Cairo & Giza)</span>
                    <span>50 EGP</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Total</strong>
                    <strong>@(Model.TotalPrice) EGP</strong>
                </li>
            </ul>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("deliver the Order", "DeliverOrder", "Order", new { CustomerName = Model.CustomerName }) |
    <a asp-action="Index">Back to List</a>
</div>

<style>
    .container {
        margin-top: 20px;
    }
    .list-group-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>
